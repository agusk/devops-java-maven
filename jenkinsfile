def tomcatServerUrl = "http://tomcatserver:8080"
pipeline {
  agent any
  // agent {
  //   node {
  //     label 'jenkins-slave'
  //   }
  // }
  tools {
    maven 'maven-3.6.3'
  }

  stages {
    //Use this code for inline pipeline script option
    stage('Code checkout') {
      steps {
        //download code from github
        git 'https://github.com/agusk/devops-java-maven.git'
      }

    }
    stage('Build') {
      steps {
        // Run the maven build
        sh '"mvn" -Dmaven.test.failure.ignore clean install'
      }

    }
    stage('Deploy') {
      steps {
        //deploy war on tomcat server
        deploy adapters: [tomcat8(url: "${tomcatServerUrl}",
            credentialsId: 'tomcat-credentials')],
          war: 'target/*.war',
          contextPath: '/test'

      }
    }
  }
}
